{
  "name": "@componentor/adaptive",
  "version": "1.5.2",
  "description": "Parse and manage adaptive CSS styles with breakpoints, themes, and states using a compact colon syntax",
  "keywords": [
    "css",
    "styles",
    "adaptive",
    "breakpoints",
    "responsive",
    "dark-mode",
    "theme",
    "states",
    "hover",
    "typescript",
    "esm",
    "parser",
    "conditional-styles"
  ],
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/componentor/adaptive.git"
  },
  "bugs": {
    "url": "https://github.com/componentor/adaptive/issues"
  },
  "homepage": "https://github.com/componentor/adaptive#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "csstype": "^3.2.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
